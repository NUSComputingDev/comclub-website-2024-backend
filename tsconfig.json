{
  "compilerOptions": {
    /* Basic Options */
    "target": "es6",
    "module": "commonjs",
    "declaration": true,
    "esModuleInterop": true,  // Enables interoperability between CommonJS and ES Modules
    "allowSyntheticDefaultImports": true,  // Allows default imports from modules with no default expor
    "sourceMap": true,
    "outDir": "./dist",
    "noImplicitAny": false,
    /* Strict Type-Checking Options */
    "strict": false
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules"
  ]
}